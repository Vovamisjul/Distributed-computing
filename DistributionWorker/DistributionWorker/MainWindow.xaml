<Window x:Name="MainWdw" x:Class="DistributionWorker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DistributionWorker"
        mc:Ignorable="d"
        Title="Worker" Height="450" Width="800" Initialized="Window_Initialized" Loaded="MainWdw_Loaded">
    <Grid>
        <Menu HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="782" Background="WhiteSmoke">
            <MenuItem Header="Tasks">
                <MenuItem Name="AllTasksItem" Header="All tasks" Click="AllTasksItem_Click"></MenuItem>
            </MenuItem>
            <MenuItem Header="Settings">
            </MenuItem>
        </Menu>
        <Button Name="startBtn" FontSize="16" Content="Start" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,30" Width="114" Height="33" Click="StartBtn_Click"/>

    </Grid>
</Window>
